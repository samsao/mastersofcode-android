<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item_deal"
    style="@style/AppCardView">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.oyeoye.merchant.presentation.util.AspectRatioImageView
                android:id="@+id/list_item_deal_image"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                app:ratio="2" />

            <TextView
                android:id="@+id/list_item_deal_discount_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_marginRight="@dimen/spacing"
                android:layout_marginTop="@dimen/spacing"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_size_large" />

            <TextView
                android:id="@+id/list_item_deal_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:layout_marginBottom="@dimen/spacing"
                android:layout_marginLeft="@dimen/spacing"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_size_very_large" />

        </FrameLayout>

        <!--Description-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/spacing"
            android:paddingRight="@dimen/spacing"
            android:paddingTop="@dimen/spacing">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/spacing"
                android:src="@drawable/ic_assignment_24dp" />

            <TextView
                android:id="@+id/list_item_deal_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="jshdgfjdskwejhfdhgjerh"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/font_size_medium" />

        </LinearLayout>

        <!--Price-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/spacing"
            android:paddingRight="@dimen/spacing"
            android:paddingTop="@dimen/spacing">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/spacing"
                android:src="@drawable/ic_attach_money_24dp" />

            <TextView
                android:id="@+id/list_item_deal_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:text="99.99"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/font_size_medium" />

        </LinearLayout>

        <!--Quantity-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/spacing"
            android:paddingRight="@dimen/spacing"
            android:paddingTop="@dimen/spacing">

            <ImageView
                android:id="@+id/list_item_deal_quantity_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/spacing" />

            <TextView
                android:id="@+id/list_item_deal_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/font_size_medium" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>